{
  "name": "avtovyshka-spb",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build && next export",
    "start": "http-server ./out -p 3000 -s",
    "check-types": "tsc",
    "format": "prettier --write .",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "next lint",
    "cy:open": "cypress open",
    "test": "start-server-and-test dev http://localhost:3000 cy:open",
    "cy:run": "cypress run",
    "pretest:ci": "yarn build",
    "test:ci": "start-server-and-test start http://localhost:3000 cy:run",
    "validate": "yarn lint && yarn test:ci"
  },
  "dependencies": {
    "@tailwindcss/forms": "0.3.4",
    "classnames": "2.3.1",
    "emailjs-com": "3.2.0",
    "google-map-react": "2.1.10",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-cool-inview": "2.0.7",
    "react-dom": "17.0.2",
    "react-hot-toast": "2.1.1",
    "react-image-gallery": "1.2.7",
    "react-slick": "0.28.1",
    "react-tabs": "3.2.2",
    "react-yandex-metrika": "2.6.0",
    "slick-carousel": "1.8.1"
  },
  "devDependencies": {
    "@testing-library/cypress": "8.0.1",
    "@types/google-map-react": "2.1.3",
    "@types/react": "17.0.27",
    "@types/react-image-gallery": "1.0.5",
    "@types/react-slick": "0.23.5",
    "@types/react-tabs": "2.3.3",
    "autoprefixer": "10.3.7",
    "cypress": "8.5.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "2.12.1",
    "http-server": "13.0.2",
    "husky": "7.0.2",
    "lint-staged": "11.2.0",
    "postcss": "8.3.9",
    "prettier": "2.4.1",
    "prettier-plugin-tailwind": "2.2.12",
    "start-server-and-test": "1.14.0",
    "stylelint": "13.13.1",
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-standard": "22.0.0",
    "stylelint-order": "4.1.0",
    "tailwindcss": "2.2.16",
    "typescript": "4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
