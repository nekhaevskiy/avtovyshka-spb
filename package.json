{
  "name": "avtovyshka-spb",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "next lint",
    "cy:open": "cypress open",
    "test": "start-server-and-test dev http://localhost:3000 cy:open",
    "pretest:e2e:run": "yarn build",
    "cy:run": "cypress run",
    "test:e2e:run": "start-server-and-test start http://localhost:3000 cy:run",
    "validate": "yarn lint && yarn test:e2e:run"
  },
  "dependencies": {
    "next": "11.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/cypress": "^7.0.6",
    "@types/react": "17.0.11",
    "autoprefixer": "^10.2.6",
    "cypress": "^7.5.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "husky": "^6.0.0",
    "lint-staged": ">=10",
    "postcss": "^8.3.5",
    "prettier": "2.3.1",
    "start-server-and-test": "^1.12.5",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "tailwindcss": "^2.2.4",
    "typescript": "4.3.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{css}": [
      "stylelint",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
