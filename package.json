{
  "name": "avtovyshka-spb",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build && next export",
    "start": "http-server ./out -p 3000 -s",
    "check-types": "tsc",
    "format": "prettier --write .",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint '**/*.css'",
    "lint:js": "next lint",
    "cy:open": "cypress open",
    "test": "start-server-and-test dev http://localhost:3000 cy:open",
    "cy:run": "cypress run",
    "pretest:ci": "yarn build",
    "test:ci": "start-server-and-test start http://localhost:3000 cy:run",
    "validate": "yarn lint && yarn test:ci"
  },
  "dependencies": {
    "@tailwindcss/forms": "0.5.0",
    "classnames": "2.3.1",
    "emailjs-com": "3.2.0",
    "google-map-react": "2.1.10",
    "next": "12.1.4",
    "react": "18.0.0",
    "react-cool-inview": "2.0.9",
    "react-dom": "18.0.0",
    "react-hot-toast": "2.2.0",
    "react-image-gallery": "1.2.7",
    "react-slick": "0.28.1",
    "react-tabs": "4.2.0",
    "react-yandex-metrika": "2.6.0",
    "slick-carousel": "1.8.1"
  },
  "devDependencies": {
    "@testing-library/cypress": "8.0.2",
    "@types/google-map-react": "2.1.5",
    "@types/react": "17.0.43",
    "@types/react-image-gallery": "1.0.5",
    "@types/react-slick": "0.23.8",
    "@types/react-tabs": "2.3.4",
    "autoprefixer": "10.4.4",
    "cypress": "9.5.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "http-server": "14.1.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "postcss": "8.4.12",
    "prettier": "2.6.1",
    "prettier-plugin-tailwindcss": "0.1.8",
    "start-server-and-test": "1.14.0",
    "stylelint": "14.6.1",
    "stylelint-config-css-modules": "4.1.0",
    "stylelint-config-standard": "25.0.0",
    "stylelint-order": "5.0.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
